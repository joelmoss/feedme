{
  "manifest_version": 3,
  "name": "FeedMe",
  "version": "0.1.0",
  "description": "Remembers where you stopped reading on X.com",
  "permissions": ["storage", "sidePanel", "activeTab"],
  "host_permissions": ["https://x.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "panel/index.html"
  },
  "action": {
    "default_title": "FeedMe"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
