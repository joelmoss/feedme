{
  "manifest_version": 3,
  "name": "FeedMe",
  "version": "0.1.0",
  "description": "Unified X.com and Bluesky feed reader with read-position tracking",
  "permissions": ["storage", "sidePanel", "alarms"],
  "host_permissions": [
    "https://x.com/*",
    "https://bsky.social/*",
    "https://bsky.app/*",
    "https://*.bsky.network/*",
    "https://public.api.bsky.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "side_panel": {
    "default_path": "panel/index.html"
  },
  "action": {
    "default_title": "FeedMe"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
